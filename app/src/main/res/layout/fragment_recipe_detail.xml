<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.RecipeDetailFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uploadimg"
            android:elevation="4dp"
            android:background="@drawable/rounded_corner_background" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="-22dp"
            android:background="@drawable/rounded_back"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/addToGroceryList"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:src="@drawable/bookmark_24px"
                    android:text="Dinner"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:src="@drawable/shopping_basket"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="Dinner"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:id="@+id/sendSms"
                    android:src="@drawable/shopping_basket"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="SMS"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:text="Recipe Title"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200" />



            <!-- Description -->
            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="A brief description about the recipe."
                android:textSize="18sp"
                android:textColor="@color/teal_700"
                android:background="@drawable/rounded_corner_background"
                android:padding="12dp" />

            <!-- Ingredients -->
            <TextView
                android:id="@+id/textViewIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ingredients:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:background="@drawable/rounded_corner_background"
                android:padding="8dp" />

            <!-- Steps -->
            <TextView
                android:id="@+id/textStepsToCook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Steps to cook the recipe:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/teal_200"
                android:background="@drawable/rounded_corner_background"
                android:padding="8dp" />


        </LinearLayout>


    <!-- Floating Action Menu -->
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:menu_colorNormal="@color/navy"
        app:menu_colorPressed="@color/cyan"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/baseline_format_list_bulleted_24"
        app:menu_openDirection="up"
        app:menu_showShadow="true">

        <!-- Edit Button -->
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            app:fab_colorNormal="@color/green"
            app:fab_size="mini" />

        <!-- Delete Button -->
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_delete_24"
            app:fab_colorNormal="@color/red"
            app:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
