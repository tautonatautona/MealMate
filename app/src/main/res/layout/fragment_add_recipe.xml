<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".Fragments.addRecipeFragment">

    <!-- ImageView for uploading an image -->
    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginBottom="16dp"
        android:background="@drawable/image_background" />

    <!-- EditText for entering recipe title -->
    <EditText
        android:id="@+id/uploadTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Recipe Title"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- EditText for entering recipe description -->
    <EditText
        android:id="@+id/uploadDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Recipe Description"
        android:background="@drawable/rounded_edittext"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:gravity="top"
        android:minLines="4"
        android:maxLines="6"
        android:scrollbars="vertical" />

    <!-- Button for saving the recipe -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Recipe"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

</LinearLayout>
